<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:buttonStyle">@style/myStyle</item>-->
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/holo_orange_dark</item>
        <item name="android:colorBackground">@android:color/holo_orange_dark</item>
        <item name="android:fontFamily">cursive</item>
    </style>


    <style name="buttonStyle" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:background">@drawable/button_background</item>

    </style>


